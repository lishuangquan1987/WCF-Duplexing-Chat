<Window x:Class="WCF_双工_Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200" Width="400" WindowStartupLocation="CenterScreen" Title="请输入用户名来登录">
    <Grid Height="50" Margin="0">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBox Name="tb_UserName" Width="300" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
            <Button Width="70" Click="Button_Click" RenderTransformOrigin="1.12,0.46">登录</Button>
        </StackPanel>
        
    </Grid>
</Window>
